<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping>

    <class name="br.ujr.scorecard.model.cartao.contratado.CartaoContratado" table="CARTAO_CONTRATADO">
    
	    <id name="id" column="ID">
	    	<generator class="identity"/>
	    	<!-- 
	        <generator class="native">
                <param name="sequence">CONTA_CORRENTE_SEQ</param>
        	</generator>
        	-->
	    </id>
	    
	    <property name="operadora"/>
	    <property name="nome"/>
	    
	    <!-- 
	     CartaoContratado pertence a uma ContaCorrente
	     -->
	    <many-to-one name="contaCorrente" embed-xml="false"
	    		column="CONTA_CORRENTE_ID"
	    		unique="true"
	    		not-null="true"
	    		lazy="false"
	    		fetch="join">
	    </many-to-one>
	    
	    <property name="logo"/>
	    <property name="categoria" column="DEBITO_CREDITO"/> 
	    
	</class>
    
</hibernate-mapping>