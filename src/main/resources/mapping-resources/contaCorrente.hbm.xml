<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping>

    <class name="br.ujr.scorecard.model.cc.ContaCorrente" table="CONTA_CORRENTE">
    
	    <id name="id" column="ID">
	    	<generator class="identity"/>
	    	<!-- 
	        <generator class="native">
                <param name="sequence">CONTA_CORRENTE_SEQ</param>
        	</generator>
        	-->
	    </id>
	    
	    <property name="descricao"/>
	    <property name="numero"/>
	    
	    <!-- 
	     ContaCorrente pertence a um Banco
	     -->
	    <many-to-one name="banco" embed-xml="false"
	    		column="BANCO_ID"
	    		unique="true"
	    		not-null="true"
	    		lazy="false"
	    		fetch="join">
	    </many-to-one> 
	    
	    <property name="ordem"/>
	    
	    <property name="cheque" type="true_false" column="HAS_CHEQUE"/>
	    
	</class>
    
</hibernate-mapping>