<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory name="scorecardSessionFactory">
        <property name="hibernate.connection.driver_class">org.firebirdsql.jdbc.FBDriver</property>
        <property name="hibernate.connection.password">card</property>
        <property name="hibernate.connection.url">jdbc:firebirdsql:localhost:/eclipse-workspace/Scorecard/firebird/SCORECARD.FDB</property>
        <property name="hibernate.connection.username">scorecard</property>
        <property name="hibernate.dialect">org.hibernate.dialect.FirebirdDialect</property>
    </session-factory>
</hibernate-configuration>
